    <h2> Negara Asia dan Ibu kota nya</h2>
    <?php
    $negaraAsia = [
        "Indonesia" => "Jakarta",
        "India" => "New Delhi",
        "Jepang" => "Tokyo",
        "Cina" => "Beijing",
        "Malaysia" => "Kuala Lumpur",
        "Filipina" => "Manila",
        "KoreaUtara" => "Pyongyang",
        "KoreaSelatan" => "Seoul",
        "Iran" => "Teheran",
        "Irak" => "Bahgdad",
        "Vietnam" => "Hanoi",
        "Thailand" => "Bangkok",
    ];

    $no = 1;
    foreach ($negaraAsia as $negara => $ibukota) {
        echo "$no. $negara ibukotanya $ibukota<br>";
        $no++;
    }
    ?>

    <hr>

    <h2> Pengolahan Data Suhu Udara</h2>
    <?php
    $suhuUdara = [29, 35, 38, 31, 34, 36, 39, 33, 34, 40, 35, 32, 37, 34, 31, 36, 33, 39, 30, 33, 41];

    // a. Rata-rata suhu
    $rata2 = array_sum($suhuUdara) / count($suhuUdara);
    echo "Rata-rata suhu adalah " . round($rata2, 1) . "<br>";

    // b. 5 suhu paling rendah
    $terendah = $suhuUdara;
    sort($terendah);
    $terendah5 = array_slice($terendah, 0, 5);
    echo "5 suhu paling rendah adalah " . implode(", ", $terendah5) . "<br>";

    // c. 5 suhu paling tinggi
    $tertinggi = $suhuUdara;
    rsort($tertinggi);
    $tertinggi5 = array_slice($tertinggi, 0, 5);
    echo "5 suhu paling tinggi adalah " . implode(", ", $tertinggi5) . "<br>";
    ?>

    <hr>

    <h2> Konversi Mata Uang ke Rupiah</h2>
    <?php
    $rate = [
        'usd' => 14367,
        'jpy' => 1192,
        'cny' => 2262,
        'krw' => 11.87,
        'myr' => 3416,
        'sgd' => 10621,
        'gbp' => 19074,
        'eur' => 15891,
    ];

    function konversiKeRupiah($jumlah, $mataUang, $rate) {
        $mataUang = strtolower($mataUang);
        if (isset($rate[$mataUang])) {
            $hasil = $jumlah * $rate[$mataUang];
            echo "$jumlah $mataUang dikonversi menjadi Rp " . number_format($hasil, 0, ',', '.') . "<br>";
        } else {
            echo "Mata uang $mataUang tidak dikenali.<br>";
        }
    }

    // Contoh penggunaan
    konversiKeRupiah(8, 'usd', $rate);
    konversiKeRupiah(7, 'jpy', $rate);
    konversiKeRupiah(10, 'eur', $rate);
    konversiKeRupiah(10000, 'krw', $rate);
    ?>
